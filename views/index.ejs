<%- include ('partials/header') %>
<section class="h-100">
	<div class="container h-100">
		<div class="row justify-content-md-center h-100">
			<div class="card-wrapper">
				<div class="brand">
					<img src="img/logo.PNG" alt="logo">
				</div>
				<div class="card fat">
					<div class="card-body">
						<h4 class="card-title" align="center"><b>Welcome to <span class="text-danger">Stress</span><span class="text-primary">Busters</span> !</b></h4>
						<h4 class="card-title" align="center">Login</h4>
						<form method="POST" class="my-login-validation" action="/login" novalidate="">
							<div class="form-group">
								<label for="email">Email Address</label>
								<input id="email" type="username" class="form-control" name="username" value="" required autofocus>
								<div class="invalid-feedback">
									Invalid email
								</div>
							</div>
							
							<div class="form-group mt-4">
								<label for="password">Password
									<a href="forgot.html" class="float-end">
										Forgot Password?
									</a>
								</label>
								<input id="password" type="password" class="form-control" name="password" required data-eye>
								<div class="invalid-feedback">
									Please enter the password
								</div>
							</div>
							<div class="form-group mt-4 d-grid">
								<button type="submit" class="btn btn-primary">
									Login
								</button>
							</div>
							<div class="mt-4 text-center">
								Don't have an account? <a href="/signup">Sign Up</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<%- include ('partials/footer') %>