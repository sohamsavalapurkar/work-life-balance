<%- include ('partials/header') %>
<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-md-center h-100">
            <div class="col-md-12">
                <div class="brand">
                    <img src="img/logo.PNG" alt="bootstrap 4 login page">
                </div>
                <div class="card fat">
                    <div class="card-body">
                        <!-- <h4 class="card-title" align="center"><b>Welcome to Stressbusters!</b></h4> -->
                        <h4 class="card-title" align="center"><b>Work Details</b></h4>
                        <form method="POST" class="my-login-validation" action='/insertData' novalidate="">
                            <div class="row mt-2">
                                <div class="col">
                                    <label for="profession">Profession</label>
                                    <input id="profession" name="profession" type="text" class="form-control" name="profession" required autofocus>
                                    <div class="invalid-feedback">
                                        Please enter your profession
                                    </div>
                                </div>
                                <div class="col">
                                    <label for="screentime">Screen Time</label>
                                    <input id="screentime" name="screentime" type="number" class="form-control" name="screentime" required autofocus>
                                    <div class="invalid-feedback">
                                        Please enter the screen time in hours
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" id= 'username' name='username' value='<%= data.username %>'>
                            <input type="hidden" id='name' name='name' value='<%= data.name %>'>
                            <input type="hidden" name='password' name='password' value='<%= data.password %>'>
                            <input type="hidden" id= 'familydetails' name='familydetails' value='<%= data.familydetails %>'>
                            <input type="hidden" id='leisuretime' name='leisuretime' value='<%= data.leisuretime %>'>
                            <input type="hidden" id='kids' name='kids' value='<%= data.kids %>'>
                            <input type="hidden" id='sleeptime' name='sleeptime' value='<%= data.sleeptime %>'>
                            <input type="hidden" id='hobbies' name='hobbies' value='<%= data.hobbies %>'>
                            <input type="hidden" id='comments_life' name='comments_life' value='<%= data.comments_life %>'>
                            <div class="row mt-2">
                                <div class="col">
                                    <label for="company">Company Name</label>
                                    <input id="company" name="company" type="text" class="form-control" name="company">
                                </div>
                                <!-- <div class="invalid-feedback">
                                    Invalid email
                                </div> -->
                                <div class="col">
                                    <label for="breaktime">Break Time</label>
                                    <input id="breaktime" name="breaktime" type="number" class="form-control" placeholder="in min" name="breaktime" required autofocus>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col">
                                    <label for="position">Position</label>
                                    <input id="position" name="position" type="text" class="form-control" name="position">
                                </div>
                                <!-- <div class="invalid-feedback">
                                    Invalid email
                                </div> -->
                                <div class="col">
                                    <label for="worktime">Daily working hours</label>
                                    <input id="worktime" name="worktime" type="number" class="form-control" name="worktime" required autofocus>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col">
                                    <label for="worktime">Tools & Technology</label>
                                    <select class="form-select" name="techs" id="techs" aria-label="Default select example">
                                    <option selected>Please select</option>
                                    <option value="C++">C++</option>
                                    <option value="Python">Python</option>
                                    <option value="C">C</option>
                                    </select>
                                        </div>
                                        <!-- <div class="invalid-feedback">
                                            Invalid email
                                        </div> -->
                                        <div class="col">
                                            <label for="comments">Comments</label>
                                            <textarea class="form-control" name="comments_work" id="comments_work" placeholder="Details related to schedule" aria-label="With textarea"></textarea>
                                        </div>
                                    </div>
                                </div>

                            <div class="form-group mt-2 d-grid">
                                <button type="submit" class="btn btn-primary">
                                    Submit
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</section>

<%- include ('partials/footer') %>